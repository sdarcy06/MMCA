<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:padding="7dp"
    style="Bold"
    android:background="#12f647">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:allowUndo="true"
        android:text="Enter a property price"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="15dp"
        android:text="Enter the deposit amount"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="15dp"
        android:text="Number of months "
        android:textStyle="italic"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:textColor="#ffe6e6"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:typeface="serif"
        android:onClick="event"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mortgage App"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#ffe6e6"
        android:singleLine="false"
        android:padding="7dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results will be displayed here"
        android:id="@+id/textView2"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textIsSelectable="false" />

</RelativeLayout>
